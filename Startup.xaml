<Window x:Class="TicTacToe.Startup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe"
        mc:Ignorable="d"
        Title="Startup" Height="450" Width="800">
    <Grid>

        <Label HorizontalAlignment="Center" FontSize="20"  Content="Choose X or O to continue (X usually plays first)" ></Label>
        <Image x:Name="Image_StartX" HorizontalAlignment="Left" Source="Image/tic-tac-toe_o.png" Height="100" Margin="244,111,0,0" MouseDown="ChooseO"></Image>
        <Image x:Name="Image_StartO" Source="Image/tic-tac-toe_x.png" Height="100" Margin="95,111,0,0" MouseDown="ChooseX"></Image>
        <Button Content="Change O to X" HorizontalAlignment="Left" Margin="652,263,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
